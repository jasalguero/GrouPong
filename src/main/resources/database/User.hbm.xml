<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.groupon.hcktn.groupong.model.entity.User" table="user">
        <id name="id" column="id" type="integer">
            <generator class="native"></generator>
        </id>
        <property name="email" column="email" type="text"></property>
        <property name="password" column="password" type="text"></property>
        <property name="username" column="user_name" type="text"></property>
        <property name="avatar" column="avatar" type="text"></property>
        <property name="score" column="score" type="integer"></property>
    </class>
</hibernate-mapping>